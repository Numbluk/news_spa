@import "reset.css"

a
  text-decoration: none
  color: #000

header
main
  width: 90%
  margin 5px auto 0 auto

header
  padding-bottom: 5px
  position: relative
  border-bottom: 1px solid #ccc
  ul
    display: inline-block
    ::after
      content: ""
      display: block
      clear: both
    li
      display: inline-block
      line-height: 2em
      box-sizing: border-box
      padding: 0 10px
  h1
    font-size: 2em
    position: absolute;
    top: 0
    left: 50%
    margin-left: -106px

main
  #admin
    box-sizing: border-box
    padding-top: 22px
    margin-bottom: 70px
    h2
      font-size: 1.5em
      position: relative
      left: 50%
      margin-left: -67px
      margin-bottom: 12px
  #add_or_edit
    padding-top: 22px
    margin-bottom: 70px
    h2
      font-size: 1.5em
      display: inline-block
      position: relative
      left: 50%
      margin-left: -56px
      margin-bottom: 12px
    form
      width: 70%
      margin: 0 auto
      label
        display: block
        margin: 15px 0 5px 0
      input,
      textarea
        width: 100%
      button
        margin-top: 10px
        + button
          margin-left: 12px
      span
        display: inline-block
        margin: 8px 0
  #user
    padding-top: 22px
    margin-bottom: 70px
    .article
      h3
        display: inline-block;
        &:hover
          color: #046380
          cursor: pointer
    h2
      font-size: 1.5em
      display: inline-block
      position: relative
      left: 50%
      margin-left: -28px
      margin-bottom: 12px
  .article
    box-sizing: border-box;
    margin: 18px 0
    border: 1px solid rgb(238, 238, 238)
    padding: 5px
    position: relative
    h3
      font-size: 1.3em
    small
      font-size: 0.7em
      display: block
      margin: 2px 0 11px 0
    p
      margin-bottom: 13px
    .index
      position: absolute
      top: 42px
      left: -18px
      visibility: hidden
    a
      font-size: 0.8em
      + a
        margin-left: 5px
  #view_article
    padding-top: 22px
    text-align: center
    width: 100%
    position: relative
    h2
      font-size: 1.7em
    small
      display: block
      font-size: 0.7em
      margin: 2px 0 11px 0
    p
      width: 70%
      margin: 0 auto 13px auto
      text-align: justify;
    #refresh
      display: none
      position: absolute
      right: 10px
      top: 24px
      background: rgba(255, 211, 78, 0.5)
      padding: 5px
    #removed
      display: none
      position: absolute
      right: 10px
      top: 24px
      background: rgba(189, 73, 50, 0.4)
      width: auto
      padding: 5px

